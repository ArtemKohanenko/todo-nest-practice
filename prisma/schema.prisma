generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id @default(uuid())
  login String     @unique
  passwordHash String
  tasks Task[]
}

model Task {
  id    String  @id @default(uuid())
  text  String
  done  Boolean @default(false)
  user  User    @relation(fields: [userId], references: [id])
  userId  String
}